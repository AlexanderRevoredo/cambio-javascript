{
    "version": 2,
    "builds": [
      {
        "src": "app.js",
        "use": "@vercel/node"
      },
      {
        "src": "public/**/*",
        "use": "@vercel/static"
      },
      {
        "src": "*.html",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/converter",
        "dest": "app.js"
      },
      {
        "src": "/(.*)",
        "dest": "/index.html"
      }
    ],
    "static": {
      "directory": "public"
    }
  }
  